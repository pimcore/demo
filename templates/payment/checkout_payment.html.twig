                            <div class="col-md-4">
                                <strong>Paypal</strong>

                                <table class="table table-sm">
                                    <tr class="tr">
                                        <td class="td">Username</td>
                                        <td class="td"><code>paypal-customer@heidelpay.de</code></td>
