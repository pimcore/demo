{% set headline = pimcore_input('headline', {'placeholder': 'Heading'}) %}
{% set lead = pimcore_wysiwyg('lead', {
    height: 100,
    'placeholder': 'Lead Text'
}) %}

{% if editmode or not headline.isEmpty() %}
    <div class="page-header">
        <h2>{{ headline|raw }}</h2>
    </div>
{% endif %}

{% if editmode or not lead.isEmpty() %}
    <div class="lead">
        {{ lead|raw }}
    </div>
{% endif %}