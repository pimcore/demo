{% macro attribute(value, label, translate = false, translationKeyPrefix = '') %}

    {% if(value) %}
        <dl class="item-property col-6 col-md-3 print-col-3">
            <dt>{{ label | trans }}</dt>

            {% if(translate) %}
                <dd>{{ (translationKeyPrefix ~ value) | lower | trans }}</dd>
            {% else %}
                <dd>{{ value }}</dd>
            {% endif %}

        </dl>
    {% endif %}

{% endmacro %}
